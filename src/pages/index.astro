      <figure class="py-10 max-[660px]:order-1">
        <div
          class="img-box w-[350px] h-[350px] max-[918px]:w-[300px] max-[918px]:h-[300px]"
        >
        </div>
      </figure>
    </section>
    <section
      class="flex justify-center my-32 mx-auto max-w-screen-lg px-10 max-md:flex-wrap min-h-[75svh]"
    >
      <div
        class="bg-bg text-center border-l border-t border-b border-text/50 rounded-l h-fit px-10 py-5 text-2xl min-w-fit max-md:w-full max-md:border"
      >
