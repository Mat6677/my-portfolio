---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script
      src="https://kit.fontawesome.com/df1e0c481c.js"
      crossorigin="anonymous"></script>
  </head>
  <body
    class="bg-bg text-text relative max-w-screen min-h-fit overflow-x-hidden"
  >
    <slot />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
  * {
    padding: 0%;
    margin: 0%;
    box-sizing: border-box;
  }
  body::before {
    content: "";
    width: 100%;
    height: 35svh;
    border-bottom-left-radius: 10%;
    border-bottom-right-radius: 10%;
    position: absolute;
    z-index: -10;
    left: 50%;
    transform: translateX(-50%);
    background-image: radial-gradient(
      500px 200px at 50% 0%,
      #131f33 20%,
      rgba(19, 30, 49, 0) 100%
    );
  }
  body::after {
    --dot-size: 2px;
    animation: dot-scroll 500s linear infinite;
    content: "";
    position: absolute;
    display: block;
    width: 100%;
    inset: 0;
    z-index: -10;
    margin-right: auto;
    margin-left: auto;
    background-image: radial-gradient(
      circle,
      #2e3c51 var(--dot-size),
      transparent 0
    );
    background-size: calc(14.2857142857% - 1px) 100px;
    background-repeat: repeat;
    background-position: 0 0;
  }

  @keyframes dot-scroll {
    0% {
      background-position: 0 0;
    }
    50% {
      background-position: 0 -100%;
    }
    100% {
      background-position: 0 0;
    }
  }
  body::-webkit-scrollbar {
    width: 0.25em;
  }
  body::-webkit-scrollbar-track {
    background-color: transparent;
  }
  body::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: #bfc7d2;
  }
</style>
